<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaduanSuara">

    <LinearLayout
        android:id="@+id/sambutan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EKSKUL"
            android:padding="12dp"
            android:textSize="22dp"
            android:background="@color/purple_200"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/sambutan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/circles"
            android:layout_width="550dp"
            android:layout_height="210dp"/>
    </LinearLayout>



    <ScrollView
        android:layout_below="@+id/sambutan"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >


            <LinearLayout
                android:id="@+id/imageprof"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_margin="12dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/paduansuara"
                    android:layout_margin="6dp"/>

                <TextView
                    android:lineSpacingExtra="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="PADUAN SUARA\nSMPN 29 SEMARANG"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/pict"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_below="@+id/imageprof"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:padding="8dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <TextView
                android:id="@+id/pengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Ekstra paduan Suara untuk membentuk kerjasama dalam vocal grup.\n\nHari Pelaksanaan : Rabu\n\nPembimbing : Utami Panca Dewi, S.Pd"
                android:textSize="14dp" />
        </androidx.cardview.widget.CardView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


        <LinearLayout

            android:layout_below="@+id/pict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">


                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/fotopaduansuara"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            </androidx.cardview.widget.CardView>

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>

</RelativeLayout>


