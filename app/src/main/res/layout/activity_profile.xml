<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile">

    <LinearLayout
        android:id="@+id/sambutan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PROFIL SEKOLAH"
            android:padding="12dp"
            android:textSize="22dp"
            android:background="@color/purple_200"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/sambutan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/curvea"
            android:layout_width="match_parent"
            android:layout_height="265dp"/>
    </LinearLayout>
        <ScrollView
            android:layout_below="@+id/sambutan"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
        <LinearLayout
            android:id="@+id/imageprof"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">


        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/imageku"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

                <LinearLayout
                    android:id="@+id/texting"
                    android:layout_width="match_parent"
                    android:layout_height="570dp"
                    android:layout_below="@+id/imageprof"
                    android:orientation="vertical">

                    <ImageView
                        android:padding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/duasongo" />

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="6dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacingExtra="8dp"
                            android:padding="12dp"
                            android:text="Nama Sekolah : SMPN 29 Semarang\nKepala Sekolah : Aloysius Kristianto, S.Pd, M.Pd.\nAlamat : Jalan Kedungmundu\nNo Telp : 024-67119112\nNPSN : 20331870\nStatus Sekolah : Negeri\nSK Pendiri Sekolah : 0594/o/1985 (Menteri Pendidikan dan Kebudayaan)\nTanggal SK Pendiri : 22 November 1985\nTanggal SK Izin Operasional : 22 November 1985\nEmail : smpn29_semarang@yahoo.com"
                            android:textSize="14dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                    <Button
                        android:text="Visi Misi"
                        android:id="@+id/buttonnext"
                        android:layout_gravity="center"
                        android:layout_width="120dp"
                        android:layout_height="50dp"/>
                    </LinearLayout>



                </LinearLayout>




            </RelativeLayout>
</ScrollView>

</RelativeLayout>